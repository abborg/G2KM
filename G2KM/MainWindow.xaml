                                </Border>
                                <Border x:Name="l3Button" Width="30" Height="30" CornerRadius="100" BorderBrush="Black" BorderThickness="1" Grid.Column="3" Grid.Row="0">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">L3</TextBlock>
                                </Border>
                                <Border x:Name="r3Button" Width="30" Height="30" CornerRadius="100" BorderBrush="Black" BorderThickness="1" Grid.Column="3" Grid.Row="1">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">R3</TextBlock>
                                </Border>
                            </Grid>
                        </Border>
                    </WrapPanel>
                    <WrapPanel HorizontalAlignment="Center">
                        <Border BorderBrush="Black" BorderThickness="1">
                            <Canvas Height="20" Width="150">
                                <Line x:Name="ltLine" Height="20" X1="0" X2="0" Y1="0" Y2="20">
                                    <Line.Stroke>
                                        <SolidColorBrush>
                                            <SolidColorBrush.Color>Red</SolidColorBrush.Color>
                                        </SolidColorBrush>
                                    </Line.Stroke>
                                </Line>
                            </Canvas>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1">
                            <Canvas Height="20" Width="150">
                                <Line x:Name="rtLine" Height="20" X1="0" X2="0" Y1="0" Y2="20">
                                    <Line.Stroke>
                                        <SolidColorBrush>
                                            <SolidColorBrush.Color>Red</SolidColorBrush.Color>
                                        </SolidColorBrush>
                                    </Line.Stroke>
                                </Line>
                            </Canvas>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1">
                            <WrapPanel HorizontalAlignment="Center" Height="20" Width="148">
                                <Border x:Name="upDpad" Height="20" Width="37" BorderBrush="Black" BorderThickness="1" Grid.Column="3" Grid.Row="1">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Up</TextBlock>
                                </Border>
                                <Border x:Name="downDpad" Height="20" Width="37" BorderBrush="Black" BorderThickness="1" Grid.Column="3" Grid.Row="1">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Down</TextBlock>
