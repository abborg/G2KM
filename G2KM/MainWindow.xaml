                       Text="Press an key on an attached keyboard, or enter text in the textbox below, to see details of the input device and the key(s) you pressed." />
                    <TextBlock Text="Latest Keystroke" />
                    <TextBlock Text="{Binding MouseEvent.Flags}" />
                    <TextBlock Text="{Binding MouseEvent.LastX}" />
                    <TextBlock Text="{Binding MouseEvent.LastY}" />
                    <TextBlock Text="Device Details" />
                    <TextBox IsReadOnly="True"
                     Text="{Binding MouseEvent.Device.Name, Mode=OneWay}" />
                    <TextBlock Text="{Binding MouseEvent.Device.Type, StringFormat='{}{0}'}" />
