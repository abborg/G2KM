                            </WrapPanel>
                        </Border>
                    </WrapPanel>
                    <TextBlock Text="Device Details" />
                    <TextBox IsReadOnly="True"
                     Text="{Binding HidEvent.Device.Name, Mode=OneWay}" />
                    <TextBlock Text="{Binding HidEvent.Device.Type, StringFormat='{}{0}'}" />
