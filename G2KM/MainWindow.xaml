        <TabItem Header="KeyboardDemo">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock TextWrapping="Wrap"
                       Text="Press an key on an attached keyboard, or enter text in the textbox below, to see details of the input device and the key(s) you pressed." />
                    <TextBlock Text="Latest Keystroke" />
                    <TextBlock Text="{Binding KeyboardEvent.Key, StringFormat='{}{0}'}" />
                    <TextBlock Text="{Binding KeyboardEvent.VirtualKey}" />
                    <TextBlock Text="{Binding KeyboardEvent.KeyPressState}" />
                    <TextBlock Text="Device Details" />
                    <TextBox IsReadOnly="True"
                     Text="{Binding KeyboardEvent.Device.Name, Mode=OneWay}" />
                    <TextBlock Text="{Binding KeyboardEvent.Device.Type, StringFormat='{}{0}'}" />
                    <TextBlock Text="{Binding KeyboardEvent.Device.Description}" />
                    <TextBlock Text="{Binding KeyboardCount, StringFormat='Device Count: {0}'}" />
                    <TextBlock Text="Test Input"/>
                    <TextBox />
                    <CheckBox Name="ShouldHandleKeyboard"
                      Margin="3"
                      Content="Handle events" />
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="MouseDemo">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <WrapPanel HorizontalAlignment="Center">
                        <Grid Width="150" Height="150">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" Grid.Row="0">
                                <Label>Flags</Label>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Grid.Row="0">
                                <TextBlock HorizontalAlignment="Center" Text="{Binding MouseEvent.Flags}" />
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" Grid.Row="1">
                                <Label>LastX</Label>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Grid.Row="1">
                                <TextBlock HorizontalAlignment="Center" Text="{Binding MouseEvent.LastX}" />
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" Grid.Row="2">
                                <Label>LastY</Label>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Grid.Row="2">
                                <TextBlock HorizontalAlignment="Center" Text="{Binding MouseEvent.LastY}" />
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" Grid.Row="3">
                                <Label >ButtonFlags</Label>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Grid.Row="3">
                                <TextBlock HorizontalAlignment="Center" Text="{Binding MouseEvent.ButtonFlags}" />
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" Grid.Row="4">
                                <Label>ButtonData</Label>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Grid.Row="4">
                                <TextBlock HorizontalAlignment="Center" Text="{Binding MouseEvent.ButtonData, StringFormat='{}{0:}'}" />
                            </Border>
                        </Grid>
                        <Border BorderBrush="Black" BorderThickness="1">
                            <WrapPanel VerticalAlignment="Center">
                                <Border x:Name="m1Button" Width="30" Height="30" CornerRadius="100" BorderBrush="Black" BorderThickness="1">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">M1</TextBlock>
                                </Border>
                                <Border x:Name="m2Button" Width="30" Height="30" CornerRadius="100" BorderBrush="Black" BorderThickness="1">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">M2</TextBlock>
                                </Border>
                                <Border x:Name="m3Button" Width="30" Height="30" CornerRadius="100" BorderBrush="Black" BorderThickness="1">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">M3</TextBlock>
                                </Border>
                                <Border x:Name="m4Button" Width="30" Height="30" CornerRadius="100" BorderBrush="Black" BorderThickness="1">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">M4</TextBlock>
                                </Border>
                                <Border x:Name="m5Button" Width="30" Height="30" CornerRadius="100" BorderBrush="Black" BorderThickness="1">
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">M5</TextBlock>
                                </Border>
                            </WrapPanel>
                        </Border>
                        <Border Height="150" Width="20" BorderBrush="Black" BorderThickness="1">
                            <Canvas>
                                <Line Canvas.Top="75" StrokeThickness="2" X1="0" X2="20" Y1="0" Y2="0">
                                    <Line.Stroke>
                                        <SolidColorBrush>
                                            <SolidColorBrush.Color>Red</SolidColorBrush.Color>
                                        </SolidColorBrush>
                                    </Line.Stroke>
                                </Line>
                            </Canvas>
                        </Border>
                    </WrapPanel>
                    <TextBlock Text="Device Details" />
                    <TextBox IsReadOnly="True"
                     Text="{Binding MouseEvent.Device.Name, Mode=OneWay}" />
                    <TextBlock Text="{Binding MouseEvent.Device.Type, StringFormat='{}{0}'}" />
                    <TextBlock Text="{Binding MouseEvent.Device.Description}" />
                    <TextBlock Text="{Binding MouseCount, StringFormat='Device Count: {0}'}" />
                    <CheckBox Name="ShouldHandleMouse"
                      Margin="3"
                      Content="Handle events" />
                </StackPanel>
            </ScrollViewer>
        </TabItem>
